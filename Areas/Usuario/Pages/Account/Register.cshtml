@page "/Usuario/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registrar</h3>
                </div>
                <img src="~/images/icons/Logo-Adidas.jpg" class="mx-auto w-25" />
                <div class="card-body">
                    <form method="post" asp-action="">
                        <div class="form-group">
                            <!--<label asp-for="Input.Email"></label>-->
                            <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <!--<label asp-for="Input.Password"></label>-->
                            <input asp-for="Input.Password" placeholder="Contraseña" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <!--<label asp-for="Input.Password"></label>-->
                            <input asp-for="Input.ConfirmPassword" placeholder="Repetir contraseña" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input class="btn btn-primary btn-block" type="submit" value="Aceptar" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}
